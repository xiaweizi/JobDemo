<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiaweizi.jobdemo.MainActivity">

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:divider="@null" />

    <Button
        android:id="@+id/bt_start_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="start job"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_view" />

    <Button
        android:id="@+id/bt_cancel_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel all jobs"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_start_job" />

    <Button
        android:id="@+id/bt_clear_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear log"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_cancel_all" />

    <com.example.xiaweizi.jobdemo.MarqueeTextView
        android:background="#0ff"
        android:id="@+id/tv_marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我是跑马灯我是跑马灯我是跑马灯"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/bt_clear_log" />

</android.support.constraint.ConstraintLayout>
